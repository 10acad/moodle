{{!
    @template watool_guniversal/tracking_code

    Template for adding the Google Universal Tracking script.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * analyticsid The Google tracking code
    * addition Page tracking info added by this plugin
    * userid Moodle User ID
    * addition Page tracking info added by this plugin
}}

<script type="text/javascript">
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
    ga('create', '{{analyticsid}}', {'siteSpeedSampleRate': 50});
    {{#userid}}ga('set', 'userId', '{{userid}}');{{/userid}}
    ga('send', {{{addition}}});
</script>